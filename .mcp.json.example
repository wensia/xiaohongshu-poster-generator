{
  "mcpServers": {
    "xiaohongshu-mcp": {
      "type": "sse",
      "url": "http://localhost:18060/mcp",
      "_comment": "需先运行 ./xiaohongshu-mcp/xiaohongshu-login-darwin-arm64 启动服务"
    },
    "lark-mcp": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "-y",
        "@larksuiteoapi/lark-mcp",
        "mcp",
        "-a", "<YOUR_LARK_APP_ID>",
        "-s", "<YOUR_LARK_APP_SECRET>"
      ],
      "_comment": "从飞书开放平台获取凭证：https://open.feishu.cn/app"
    },
    "playwright": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "@anthropic-ai/playwright-mcp@latest"],
      "_comment": "浏览器自动化，用于截图生成海报"
    }
  }
}
